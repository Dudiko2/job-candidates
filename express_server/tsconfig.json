{
    "compilerOptions": {
        "target": "es5",
        "lib": ["es6"],
        "module": "commonJS",
        "rootDir": "src",
        "resolveJsonModule": true,
        "outDir": "./build/",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "typeRoots": ["./node_modules/@types", "./src/@types"]
    }
}
